import pandas as pd
import pyodbc

# Sample DataFrames with different column names for merging but same col_d
df = pd.DataFrame({
    'col_a': [1, 2, 3],
    'col_b': [4, 5, 6],
    'col_c': [7, 8, 9],
    'col_d': ['data1', 'data2', 'data3']
})

existing_data_df = pd.DataFrame({
    'col_a2': [1, 2, 10],
    'col_b2': [4, 5, 15],
    'col_c2': [7, 8, 17],
    'col_d': ['old_data1', 'old_data2', 'old_data10']  # Same col_d in both
})

# Step 1: Merge df and existing_data_df based on the different column names (except col_d)
merged_df = pd.merge(
    existing_data_df, 
    df[['col_a', 'col_b', 'col_c', 'col_d']], 
    left_on=['col_a2', 'col_b2', 'col_c2'], 
    right_on=['col_a', 'col_b', 'col_c'], 
    how='left'
)

# Step 2: Update col_d in existing_data_df with the matching data from df where match is found
existing_data_df['col_d'] = merged_df['col_d_y'].combine_first(existing_data_df['col_d'])  # Update col_d if match found, keep old otherwise

# Step 3: Identify matched and unmatched rows
matched_rows = merged_df[merged_df['col_d_y'].notna()]  # Rows that matched
new_rows = merged_df[merged_df['col_d_y'].isna()]       # Rows that didn't match and are new

# Connect to the SQL database
connection = pyodbc.connect(
    'Driver={SQL Server};'
    'Server=your_server;'
    'Database=your_database;'
    'Trusted_Connection=yes;'
)
cursor = connection.cursor()

# Step 4: Update matched rows in SQL
for index, row in matched_rows.iterrows():
    query_update = f"""
    UPDATE your_sql_table
    SET col_d = '{row['col_d_y']}'
    WHERE col_a2 = {row['col_a2']} AND col_b2 = {row['col_b2']} AND col_c2 = {row['col_c2']}
    """
    cursor.execute(query_update)

# Step 5: Insert new rows into SQL
for index, row in new_rows.iterrows():
    query_insert = f"""
    INSERT INTO your_sql_table (col_a2, col_b2, col_c2, col_d)
    VALUES ({row['col_a2']}, {row['col_b2']}, {row['col_c2']}, '{row['col_d']}')
    """
    cursor.execute(query_insert)

# Commit the changes and close the connection
connection.commit()
connection.close()

# Show updated existing_data_df with changes
print(existing_data_df)
